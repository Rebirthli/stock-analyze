# 股票分析API系统环境变量配置
# Stock Analysis API System Environment Variables

# ============================================================================
# 端口配置 (Port Configuration)
# ============================================================================
# API服务端口 - 使用非常规端口9527避免冲突
API_PORT=9527

# Redis服务端口 - 使用非常规端口7219避免冲突
REDIS_PORT=7219

# ============================================================================
# Redis配置 (Redis Configuration)
# ============================================================================
REDIS_HOST=redis
REDIS_PASSWORD=StockAnalysis2025!Redis
REDIS_DB=0

# ============================================================================
# 功能开关 (Feature Toggles)
# ============================================================================
# 启用Redis缓存
ENABLE_CACHE=true

# 启用熔断器
ENABLE_CIRCUIT_BREAKER=true

# ============================================================================
# 日志配置 (Logging Configuration)
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# 性能配置 (Performance Configuration)
# ============================================================================
# 最大并发数据源
MAX_CONCURRENT_SOURCES=5

# 请求超时时间(秒)
REQUEST_TIMEOUT=60

# 缓存默认TTL(秒)
DEFAULT_CACHE_TTL=300
